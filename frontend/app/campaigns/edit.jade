.view
  .container
    .row  
      .col-sm-4
        h2 Add a Campaign
        form( method="post" ng-submit="campCtrl.addCampaign()" name="createForm" )
          .form-group
            input.form-control(type="text" ng-model="campCtrl.newcampaign.title" ng-required="true" placeholder="Title")
          .form-group
            textarea.form-control(ng-model="campCtrl.newcampaign.description" ng-required="true" placeholder="Description")
          button.btn.btn-lg.btn-success.btn-block Add New Campaign

      .col-sm-8
        .row(style="margin-top:73px;")
          .col-sm-6.col-lg-4.col-md-4( ng-repeat="campaign in campCtrl.campaigns" )
            .thumbnail
              img( src="http://placehold.it/320x150" alt="" )
              .caption
                p {{campaign.title}}
                p {{campaign.description}}  
                a.ion-ios7-trash.pull-right(href="" ng-click="deleteJob($index, job.id)")